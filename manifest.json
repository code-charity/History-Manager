{
    "manifest_version": 2,
    "name": "History Manager",
    "version": "1.0",
    "version_name": "1.0-alpha",

    "default_locale": "en",

    "background": {
        "scripts": [
            "data/categories.js",
            "data/params.js",
            "data/useless-params.js",
            "background.js"
        ]
    },

    "chrome_url_overrides": {
        "newtab": "index.html"
    },

    "permissions": [
        "bookmarks",
        "chrome://favicon/",
        "history",
        "storage",
        "unlimitedStorage",
        "tabs"
    ],

    "content_security_policy": "script-src 'self'; object-src 'self'; img-src * data: chrome://favicon;"
}